<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="16dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="huynhanhne.1234"
            android:layout_margin="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            android:text="1 giờ" />
    </LinearLayout>
    <TextView
        android:id="@+id/jobTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GÓC TUYỂN DỤNG NÈ"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quán mình hiện đang thiếu nhân viên bán hàng"
        android:textSize="14sp"
        android:paddingTop="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Ưu tiên sv nhé)"
        android:textSize="14sp"
        android:paddingTop="5dp"/>

    <TextView
        android:id="@+id/jobTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thời gian: Sáng 7h - 12h, Chiều 12h - 17h"
        android:textSize="14sp"
        android:paddingTop="5dp"/>

    <TextView
        android:id="@+id/jobSalary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lương: 20k/h"
        android:textSize="14sp"
        android:paddingTop="5dp"/>
    <TextView
        android:id="@+id/jobDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yêu cầu: SV năm nhất trở lên"
        android:textSize="14sp"
        android:paddingTop="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Làm việc đúng giờ"
        android:textSize="14sp"
        android:paddingTop="5dp"/>
    <TextView
        android:id="@+id/jobContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liên hệ qua zalo: 0921324267"
        android:textSize="14sp"
        android:paddingTop="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/heart_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20dp"
            android:layout_margin="10dp"/>
        <ImageView
            android:id="@+id/chat_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cmt"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20dp"
            android:layout_margin="10dp"/>
        <ImageView
            android:id="@+id/send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/send"
            android:layout_margin="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20dp"
            android:layout_margin="10dp"/>

    </LinearLayout>
<!-- Khung nhập bình luận -->
<EditText
    android:id="@+id/editTextComment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Nhập bình luận của bạn" />

<Button
    android:id="@+id/buttonSubmitComment"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Gửi" />

<!-- Đây là nơi hiển thị các bình luận đã có -->
<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recyclerViewComments"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />
</LinearLayout>
