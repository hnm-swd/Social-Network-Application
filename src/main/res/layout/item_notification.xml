<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header -->
    <TextView
        android:id="@+id/headerTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="THÔNG BÁO"
        android:textSize="20sp"
        android:gravity="center"
        android:background="#FFFFFF"
        android:textStyle="bold"
        android:textColor="#000000" />

    <!-- Filter Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#FFFFFF">

        <Button
            android:id="@+id/filterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tất cả"

            android:textColor="#000000" />

        <!-- Search Bar -->

    </LinearLayout>

    <!-- Notification List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Example Notification Item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="8dp">
<!--                android:marginBottom="8dp">-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ava_user" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="huynhanhne.1234"
                        android:layout_margin="10dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:paddingLeft="10dp"
                        android:text="1 giờ" />
                </LinearLayout>


                <!-- Notification Action Row -->
                <TextView
                    android:id="@+id/messageText0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:paddingLeft="60dp"
                    android:text="Em ạ"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/messageText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:paddingLeft="60dp"
                    android:text="Ib ạ"
                    android:textColor="#CCCCCC" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/heart_button"
                            android:src="@drawable/send"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_margin="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="20dp"
                            android:layout_margin="10dp"/>
                        <ImageView
                            android:id="@+id/chat_button"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/cmt"
                            android:layout_margin="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="20dp"
                            android:layout_margin="10dp"/>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
<!--            tạo card mới -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="8dp">
<!--                android:marginBottom="8dp">-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ava_user" />

                    <TextView
                        android:id="@+id/name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emnaclothing và 1 người khác "
                        android:layout_margin="10dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Time1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:paddingLeft="10dp"
                        android:text="45 phút" />
                </LinearLayout>



                <!-- Notification Action Row -->




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">




                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="8dp">
<!--                android:marginBottom="8dp">-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ava_user" />

                    <TextView
                        android:id="@+id/name4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="huynhanhne.1234"
                        android:layout_margin="10dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Time4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:paddingLeft="10dp"
                        android:text="1 giờ" />
                </LinearLayout>


                <!-- Notification Action Row -->
                <TextView
                    android:id="@+id/messageText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:paddingLeft="60dp"
                    android:text="Em ạ"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/messageText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:paddingLeft="60dp"
                    android:text="Ib ạ"
                    android:textColor="#CCCCCC" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/heart_button2"
                        android:src="@drawable/send"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_margin="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="20dp"
                        android:layout_margin="10dp"/>
                    <ImageView
                        android:id="@+id/chat_button3"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/cmt"
                        android:layout_margin="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="20dp"
                        android:layout_margin="10dp"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ava_user" />

                <TextView
                    android:id="@+id/name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="huynhanhne đã follow bạn "
                    android:layout_margin="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Time3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:paddingLeft="10dp"
                    android:text="45 phút" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
